//93%

class Solution {
    public int solution(int[] A) {
        Arrays.sort(A);
        boolean found = false;
        int index = 0;

        while (!found && index < A.length-2) {
            found = A[index] + A[index+1] > A[index+2];    
            index++;
        }
        
        return found ? 1 : 0;
    }
}
